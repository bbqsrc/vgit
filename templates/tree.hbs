<header style="margin: 2em 0" class="row">
  <div class="col-md-6">
    <h2><a href="/{{repoName}}">{{repoName}}</a></h2>
  </div>
  <div class="col-md-6">
    <a class="btn btn-primary btn-sm" href="/{{repoName}}/branches">Change branch</a>
  </div>
</header>

{{#if basePath}}
<ol class="breadcrumb">
  {{#each basePath}}
  <li class='active'>
    <a href="{{breadcrumb}}">{{this}}</a>
  </li>
  {{/each}}
</ol>
{{/if}}

<div class="file-list">
  <table class='table' style="width: 100%">
    <tbody>
      {{#each directories}}
        <tr>
          <td style='width: 1px'>D</td>
          <td>
            <a href="{{tree}}">{{filename}}</a>
          </td>
          <td class='text-muted'>
            {{commit.messageProp}}
          </td>
          <td class='text-muted'>
            {{commit.dateHuman}}
          </td>
        </tr>
      {{/each}}

      {{#each files}}
        <tr>
          <td style='width: 1px'>F</td>
          <td>
            <a href="{{blob}}">{{filename}}</a>
          </td>
          <td class='text-muted'>
            {{commit.messageProp}}
          </td>
          <td class='text-muted'>
            {{commit.dateHuman}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{#if readme}}
<hr>
<section class="readme">
  {{{readme}}}
</section>
{{/if}}
